---
import DefaultLayout from "@layouts/DefaultLayout.astro";

// Split the haiku into individual words while preserving line breaks
const haiku = [
  "Un milliers d'Ã©toiles",
  "Logique silencieuse",
  "Un code prend vie",
];

// Process the haiku into a nested array of words
const linesWithWords = haiku.map((line) => line.split(" "));
---

<DefaultLayout>
  <div class="haiku-container">
    {
      linesWithWords.map((line) => (
        <div class="haiku-line">
          {line.map((word) => (
            <span class="haiku-word">{word}</span>
          ))}
        </div>
      ))
    }
  </div>
</DefaultLayout>

<style>
  .haiku-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    text-align: center;
    font-size: 2rem;
    line-height: 1.6;
  }

  .haiku-line {
    margin: 0.5rem 0;
  }

  .haiku-word {
    display: inline-block;
    margin: 0 0.3rem;
    opacity: 0;
    animation: fadeIn 0.8s ease-in-out forwards;
  }

  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
</style>

<script>
  // After the page loads, add staggered delays to each word
  document.addEventListener("DOMContentLoaded", () => {
    const words = document.querySelectorAll(".haiku-word");

    words.forEach((word, index) => {
      // Add a delay of 0.5 seconds per word
      const delay = index * 0.2;
      word.style.animationDelay = `${delay}s`;
    });
  });
</script>
